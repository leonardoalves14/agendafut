@model SocietyAgendor.UI.Models.ClienteModel

@{
    ViewData["Title"] = "Excluir Cliente";
    Layout = "_LayoutLogado";
}

<h2>Deseja realmente excluir este registro?</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="DeleteCliente">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(model => model.Cliente_Id)
            <h4>Nome:</h4>
            @Html.DisplayFor(model => model.Cliente_Nome) <br />
            <h4>CPF:</h4>
            @Html.DisplayFor(model => model.Cliente_CPF) <br /><br />

            <div class="form-group">
                <input type="submit" value="Sim" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-danger">Não</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}