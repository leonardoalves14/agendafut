@model SocietyAgendor.UI.Models.HorarioModel

@{
    ViewData["Title"] = "Excluir Horário";
    Layout = "_LayoutLogado";
}

<h2>Excluir Horário</h2>

<h3>Tem certeza que deseja excluir esses dados?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.Horario_De)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Horario_De)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Horario_Ate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Horario_Ate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DiaSemana_Desc)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DiaSemana_Desc)
        </dd>
    </dl>

    <form asp-action="DeleteHorario" asp-controller="Horario" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        @Html.HiddenFor(model => model.Horario_Id)
        @Html.HiddenFor(model => model.DiaSemana_Id)


        <div class="row">
            <div class="form-row">
                <div class="form-group col-md-1">
                    <a asp-action="Index" class="btn btn-danger">Não</a>
                </div>
            </div>
            <div class="form-group col-md-1">
                <input type="submit" value="Sim" class="btn btn-primary" />
            </div>
        </div>
    </form>
</div>
