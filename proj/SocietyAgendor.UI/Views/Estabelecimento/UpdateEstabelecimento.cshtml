@model SocietyAgendor.UI.Models.EstabelecimentoModel

@{
    ViewData["Title"] = "Editar Estabelecimento";
    Layout = "_LayoutLogado";
}

<h2>Editar Estabelecimento</h2>

<hr />
<div class="row">
    <form asp-action="UpdateEstabelecimento">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="Estabelecimento_Id" class="form-control" type="hidden" />
        <input asp-for="Endereco_Id" class="form-control" type="hidden" />

        <div class="row">
            <div class="form-row">
                <div class="form-group col-md-5">
                    <label asp-for="Estabelecimento_Nome" class="control-label"></label>
                    <input asp-for="Estabelecimento_Nome" class="form-control" />
                    <span asp-validation-for="Estabelecimento_Nome" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="form-group col-md-3">
                    <label asp-for="Estabelecimento_CNPJ" class="control-label"></label>
                    <input asp-for="Estabelecimento_CNPJ" class="form-control" />
                    <span asp-validation-for="Estabelecimento_CNPJ" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-row">
                <div class="form-group col-md-3">
                    <label asp-for="Estabelecimento_Telefone" class="control-label"></label>
                    <input asp-for="Estabelecimento_Telefone" class="form-control" />
                    <span asp-validation-for="Estabelecimento_Telefone" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-3">
                    <label asp-for="Estabelecimento_Celular" class="control-label"></label>
                    <input asp-for="Estabelecimento_Celular" class="form-control" />
                    <span asp-validation-for="Estabelecimento_Celular" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="Estabelecimento_Email" class="control-label"></label>
                    <input asp-for="Estabelecimento_Email" class="form-control" />
                    <span asp-validation-for="Estabelecimento_Email" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-row">
                <div class="form-group col-md-2">
                    <label asp-for="Endereco_CEP" class="control-label"></label>
                    <input asp-for="Endereco_CEP" class="form-control" />
                    <span asp-validation-for="Endereco_CEP" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-3">
                    <label asp-for="Endereco_Logradouro" class="control-label"></label>
                    <input asp-for="Endereco_Logradouro" class="form-control" />
                    <span asp-validation-for="Endereco_Logradouro" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-1">
                    <label asp-for="Endereco_Numero" class="control-label"></label>
                    <input asp-for="Endereco_Numero" class="form-control" />
                    <span asp-validation-for="Endereco_Numero" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-3">
                    <label asp-for="Endereco_Bairro" class="control-label"></label>
                    <input asp-for="Endereco_Bairro" class="form-control" />
                    <span asp-validation-for="Endereco_Bairro" class="text-danger"></span>
                </div>
            </div>
        </div>


        <div class="row">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="Endereco_Cidade" class="control-label"></label>
                    <input asp-for="Endereco_Cidade" class="form-control" />
                    <span asp-validation-for="Endereco_Cidade" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-1">
                    <label asp-for="Endereco_Estado" class="control-label"></label>
                    <input asp-for="Endereco_Estado" class="form-control" />
                    <span asp-validation-for="Endereco_Estado" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="Endereco_Complemento" class="control-label"></label>
                    <input asp-for="Endereco_Complemento" class="form-control" />
                    <span asp-validation-for="Endereco_Complemento" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-row">
                <div class="form-group col-lg-1">
                    <a asp-action="Index" class="btn btn-danger">Cancelar</a>
                </div>
            </div>
            <div class="form-group col-lg-1">
                <input type="submit" value="Atualizar" class="btn btn-primary" />
            </div>
        </div>
    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}